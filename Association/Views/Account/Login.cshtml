@model SLE_System.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}


<div class="wrapper-page">
       <div class="panel panel-color panel-primary panel-pages">
        <div class="panel-heading bg-img"> 
            <div class="bg-overlay"></div>
            <h3 class="text-center m-t-10 text-white"> Sign In to <strong>SaMaYayAssociation</strong> </h3>
        </div> 

        <div class="panel-body">
        <form method="post" class="form-horizontal m-t-20">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="col-xs-12">
                <input asp-for="Email" class="form-control input-lg " required="" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            </div>

            <div class="form-group">
            <div class="col-xs-12">
                <input asp-for="Password" class="form-control input-lg " required="" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            </div>

            <div class="form-group">
            <div class="col-xs-12">
            <div class="custom-control custom-checkbox">
                <input asp-for="RememberMe" type="checkbox" class="custom-control-input">
                <label class="custom-control-label" asp-for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>
            </div>
            </div>

            <div class="form-group text-center m-t-40">
                <div class="col-xs-12">
                    <button class="btn btn-primary btn-lg w-lg waves-effect waves-light" type="submit">Log In</button>
                </div>
            </div>

            <div class="form-group m-t-30">
                <div class="col-sm-7">
                    <a href="recoverpw.html"><i class="fa fa-lock m-r-5"></i> Forgot your password?</a>
                </div>
                <div class="col-sm-5 text-right">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Create an account</a>
                </div>
            </div>
        </form>

    </div>
</div>
</div>